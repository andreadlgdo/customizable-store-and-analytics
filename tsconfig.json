{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./api"  // Assuming your TypeScript files are in the 'api' directory
  },
  "include": [
    "api"  // Adjusted to include the correct directory
  ]
}
