{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/dist/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "/backend/dist/index.js" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ]
}
